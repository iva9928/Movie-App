@model MovieWebApp.Web.ViewModels.Actor.PaginatedActorsViewModel

@{
    var searchFilter = ViewBag.SearchFilter as MovieWebApp.Web.ViewModels.Actor.SearchFilterActorViewModel;
}

<div class="container py-5">
    <!-- Title and Add Actor Button in One Row -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-4 text-center flex-grow-1" style="color: darkred; font-weight: bold;">
            🎭 All Actors 🎭
        </h1>
        <a asp-controller="Actor" asp-action="AddActor" class="btn btn-lg" style="background-color: darkred; color: white;">
            + Add Actor
        </a>
    </div>

    <!-- Pagination Controls (Show: ...) -->
    <div class="text-center mb-3">
        <span style="font-weight: bold; font-size: 1.2rem;">Show:</span>
        <a asp-controller="Actor" asp-action="AllActors" asp-route-page="1" asp-route-pageSize="2"
           asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-firstNameFilter="@searchFilter.FirstNameFilter"
           asp-route-surnameFilter="@searchFilter.SurnameFilter"
           class="btn btn-outline-primary @(Model.PageSize == 2 ? "active" : "")">2</a>
        <a asp-controller="Actor" asp-action="AllActors" asp-route-page="1" asp-route-pageSize="3"
           asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-firstNameFilter="@searchFilter.FirstNameFilter"
           asp-route-surnameFilter="@searchFilter.SurnameFilter"
           class="btn btn-outline-primary @(Model.PageSize == 3 ? "active" : "")">3</a>
        <a asp-controller="Actor" asp-action="AllActors" asp-route-page="1" asp-route-pageSize="5"
           asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-firstNameFilter="@searchFilter.FirstNameFilter"
           asp-route-surnameFilter="@searchFilter.SurnameFilter"
           class="btn btn-outline-primary @(Model.PageSize == 5 ? "active" : "")">5</a>
    </div>

    <!-- Search & Filtering Form -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <form asp-controller="Actor" asp-action="AllActors" method="get" class="d-flex">
                <input type="text" name="searchQuery" value="@searchFilter.SearchQuery" class="form-control me-2" placeholder="Search Actors..." />
                <input type="text" name="firstNameFilter" value="@searchFilter.FirstNameFilter" class="form-control me-2" placeholder="Filter by First Name..." />
                <input type="text" name="surnameFilter" value="@searchFilter.SurnameFilter" class="form-control me-2" placeholder="Filter by Surname..." />
                <button type="submit" class="btn btn-danger">Search</button>
            </form>
        </div>
    </div>

    <!-- Actor Cards -->
    <div class="row g-4">
        @foreach (var actor in Model.Actors)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-lg border-0" style="background-color: beige; border-radius: 15px;">
                    <div class="card-image-container" style="position: relative; overflow: hidden; border-radius: 15px 15px 0 0;">
                        <img src="@actor.ActorImageUrl" class="card-img-top img-fluid" alt="@actor.FirstName" style="width: 100%; height: auto; display: block;">
                    </div>
                    <div class="card-body text-center">
                        <h3 style="color: darkred; font-family: 'Georgia', serif; font-weight: bold;">
                            @actor.FirstName @actor.Surname
                        </h3>
                    </div>
                    <div class="card-footer text-center" style="background-color: beige;">
                        <a asp-controller="Actor" asp-action="Details" asp-route-id="@actor.Id" class="btn btn-outline-dark">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Navigation -->
    <div class="pagination text-center mt-4">
        @if (Model.TotalPages > 1)
        {
            <a asp-controller="Actor" asp-action="AllActors" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize"
               asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-firstNameFilter="@searchFilter.FirstNameFilter" asp-route-surnameFilter="@searchFilter.SurnameFilter"
               class="btn btn-secondary @(Model.CurrentPage == 1 ? "disabled" : "")">Previous</a>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-controller="Actor" asp-action="AllActors" asp-route-page="@i" asp-route-pageSize="@Model.PageSize"
                   asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-firstNameFilter="@searchFilter.FirstNameFilter" asp-route-surnameFilter="@searchFilter.SurnameFilter"
                   class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-outline-primary")">@i</a>
            }

            <a asp-controller="Actor" asp-action="AllActors" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize"
               asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-firstNameFilter="@searchFilter.FirstNameFilter" asp-route-surnameFilter="@searchFilter.SurnameFilter"
               class="btn btn-secondary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Next</a>
        }
    </div>
</div>
