@model MovieWebApp.Web.ViewModels.Actor.AddActorViewModel

@{
    ViewData["Title"] = "Add a New Actor";
}

<div class="container py-5">
    <!-- Title Centered -->
    <div class="text-center mb-4">
        <h1 class="display-4" style="color: darkred; font-weight: bold;">
            🎭 Add a New Actor 🎭
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Actor" asp-action="AddActor" method="post">
                <!-- First Name -->
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter actor's first name..." />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Surname -->
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Surname</label>
                    <input asp-for="Surname" class="form-control" placeholder="Enter actor's surname..." />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a short description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Image URL -->
                <div class="mb-3">
                    <label asp-for="ActorImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ActorImageUrl" class="form-control" placeholder="Enter image URL..." />
                    <span asp-validation-for="ActorImageUrl" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-lg" style="background-color: darkred; color: white;">
                        Save Actor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
