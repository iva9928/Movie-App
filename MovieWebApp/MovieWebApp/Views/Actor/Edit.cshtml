@model MovieWebApp.Web.ViewModels.Actor.EditActorViewModel

@{
    ViewData["Title"] = "Edit Actor";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Actor</h2>

    <form asp-action="Edit" method="post" class="border p-4 rounded shadow bg-white">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Surname" class="form-label">Surname</label>
                <input asp-for="Surname" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="ActorImageUrl" class="form-label">Image URL</label>
            <input asp-for="ActorImageUrl" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-warning btn-lg">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </form>
</div>
