@model MovieWebApp.Web.ViewModels.Actor.ActorDetailsViewModel

@{
    ViewData["Title"] = "Actor Details";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 style="color: #8b0000; font-weight: bold; font-family: 'Georgia', serif; text-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
            🌟 @Model.FirstName @Model.Surname 🌟
        </h1>
    </div>

    <div class="row">
        <!-- Actor Image Section -->
        <div class="col-lg-4 text-center mb-4">
            <div class="image-container" style="position: relative;">
                <img src="@Model.ActorImageUrl" alt="@Model.FirstName" class="img-fluid rounded shadow-lg"
                     style="max-width: 100%; height: auto; border: 5px solid #8b0000;">
            </div>
        </div>

        <!-- Actor Details Table -->
        <div class="col-lg-8">
            <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header text-white text-center" style="background: #8b0000; font-weight: bold; font-size: 1.5rem;">
                    Actor Details
                </div>
                <div class="card-body p-4" style="background-color: #ffffff;">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td style="width: 30%; font-weight: bold; color: #8b0000;">First Name</td>
                                <td style="width: 70%; color: #333;">@Model.FirstName</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Surname</td>
                                <td style="color: #333;">@Model.Surname</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Description</td>
                                <td style="text-align: justify; color: #333;">@Model.Description</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-controller="Actor" asp-action="AllActors" class="btn btn-warning btn-lg">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a asp-controller="Actor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-controller="Actor" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
            <i class="fas fa-trash-alt"></i> Delete
        </a>
    </div>
</div>


