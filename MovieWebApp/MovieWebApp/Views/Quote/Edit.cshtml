@model MovieWebApp.Web.ViewModels.Quote.EditQuoteViewModel

@{
    ViewData["Title"] = "Edit Quote";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4" style="color: darkred; font-weight: bold;">
            ✍ Edit Quote
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Quote" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Quote</label>
                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CharacterName" class="form-label">Character Name</label>
                    <input asp-for="CharacterName" class="form-control" required />
                    <span asp-validation-for="CharacterName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MovieOrShow" class="form-label">Movie/TV Show</label>
                    <input asp-for="MovieOrShow" class="form-control" required />
                    <span asp-validation-for="MovieOrShow" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-warning">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
