@model MovieWebApp.Web.ViewModels.Movie.PaginatedMoviesViewModel
@{
    var searchFilter = ViewBag.SearchFilter as MovieWebApp.Web.ViewModels.Movie.SearchFilterMovieViewModel;
}

<div class="container py-5">
    <!-- Title and Add Movie Button in One Row -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-4 text-center flex-grow-1" style="color: darkred; font-weight: bold;">
            🎬 All Movies 🎥
        </h1>
        <a asp-controller="Movie" asp-action="AddMovie" class="btn btn-lg" style="background-color: darkred; color: white;">
            + Add Movie
        </a>
    </div>

    <!-- Page Size Selector -->
    <div class="text-center mb-4">
        <span style="font-weight: bold; font-size: 1.2rem;">Show:</span>
        <a asp-controller="Movie" asp-action="AllMovies" asp-route-page="1" asp-route-pageSize="3" asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-genreFilter="@searchFilter.GenreFilter"
           class="btn btn-outline-primary @(Model.PageSize == 3 ? "active" : "")">3</a>
        <a asp-controller="Movie" asp-action="AllMovies" asp-route-page="1" asp-route-pageSize="6" asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-genreFilter="@searchFilter.GenreFilter"
           class="btn btn-outline-primary @(Model.PageSize == 6 ? "active" : "")">6</a>
        <a asp-controller="Movie" asp-action="AllMovies" asp-route-page="1" asp-route-pageSize="9" asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-genreFilter="@searchFilter.GenreFilter"
           class="btn btn-outline-primary @(Model.PageSize == 9 ? "active" : "")">9</a>
    </div>

    <!-- Search & Filtering Form -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <form asp-controller="Movie" asp-action="AllMovies" method="get" class="d-flex">
                <input type="text" name="searchQuery" value="@searchFilter.SearchQuery" class="form-control me-2" placeholder="Search Movies..." />
                <select name="genreFilter" class="form-select me-2">
                    <option value="">All Genres</option>
                    @foreach (var genre in searchFilter.AvailableGenres)
                    {
                        <option value="@genre" selected="@(searchFilter.GenreFilter == genre)">@genre</option>
                    }
                </select>
                <button type="submit" class="btn btn-danger">Search</button>
            </form>
        </div>
    </div>

    <!-- Movie Cards -->
    <div class="row g-4">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-lg border-0" style="background-color: beige; border-radius: 15px;">
                    <div class="card-image-container" style="position: relative; overflow: hidden; border-radius: 15px 15px 0 0;">
                        <img src="@movie.ImageUrl" class="card-img-top img-fluid" alt="@movie.Title" style="width: 100%; height: auto; display: block;">
                    </div>
                    <div class="card-body text-center">
                        <h3 style="color: darkred; font-family: 'Georgia', serif; font-weight: bold;">@movie.Title</h3>
                        <p class="card-text mt-3"><strong>Genre:</strong> @movie.Genre</p>
                        <p class="card-text"><strong>Duration:</strong> @movie.Duration minutes</p>
                        <p class="card-text"><strong>Release Date:</strong> @movie.ReleaseDate</p>
                        <p class="card-text"><strong>Casts:</strong> @movie.Casts</p>
                        <p class="card-text"><strong>Country:</strong> @movie.Country</p>
                        <p class="card-text"><strong>Production:</strong> @movie.Production</p>
                    </div>
                    <div class="card-footer text-center" style="background-color: beige;">
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-dark">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Controls -->
    <div class="pagination text-center mt-4">
        <a asp-controller="Movie" asp-action="AllMovies" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize"
           asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-genreFilter="@searchFilter.GenreFilter"
           class="btn btn-secondary @(Model.CurrentPage == 1 ? "disabled" : "")">Previous</a>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-controller="Movie" asp-action="AllMovies" asp-route-page="@i" asp-route-pageSize="@Model.PageSize"
               asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-genreFilter="@searchFilter.GenreFilter"
               class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-outline-primary")">@i</a>
        }

        <a asp-controller="Movie" asp-action="AllMovies" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize"
           asp-route-searchQuery="@searchFilter.SearchQuery" asp-route-genreFilter="@searchFilter.GenreFilter"
           class="btn btn-secondary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Next</a>
    </div>
</div>
