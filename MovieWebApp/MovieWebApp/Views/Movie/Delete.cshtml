@model MovieWebApp.Web.ViewModels.Movie.DeleteMovieViewModel

<div class="container py-5 text-center">
    <h1 class="text-center mb-4" style="color: darkred; font-weight: bold;">⚠ Confirm Delete ⚠</h1>

    <div class="card shadow-lg p-4" style="border-radius: 15px;">
        <h2 style="color: darkred; font-weight: bold;">@Model.Title</h2>
        <p style="font-size: 1.2rem; color: red;"><strong>Are you sure you want to delete this movie?</strong></p>

        <hr />

        <div class="d-flex justify-content-between">
            <a asp-controller="Movie" asp-action="AllMovies" class="btn btn-warning btn-lg">
                <i class="fas fa-times"></i> Cancel
            </a>

            <form asp-controller="Movie" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #FFC107;
        border: none;
        font-weight: bold;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #b22222;
        }
</style>