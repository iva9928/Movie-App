@model MovieWebApp.Web.ViewModels.Movie.MovieDetailsViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 style="color: #8b0000; font-weight: bold; font-family: 'Georgia', serif; text-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
            🎬 @Model.Title 🎬
        </h1>
    </div>

    <div class="row">
        <!-- Movie Image Section -->
        <div class="col-lg-4 text-center mb-4">
            <div class="image-container" style="position: relative;">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-lg"
                     style="max-width: 100%; height: auto; border: 5px solid #8b0000;">
            </div>
        </div>

        <!-- Movie Details Table -->
        <div class="col-lg-8">
            <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header text-white text-center" style="background: #8b0000; font-weight: bold; font-size: 1.5rem;">
                    Movie Details
                </div>
                <div class="card-body p-4" style="background-color: #ffffff;">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td style="width: 30%; font-weight: bold; color: #8b0000;">Title</td>
                                <td style="width: 70%; color: #333;">@Model.Title</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Genre</td>
                                <td style="color: #333;">@Model.Genre</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Duration</td>
                                <td style="color: #333;">@Model.Duration minutes</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Release Date</td>
                                <td style="color: #333;">@Model.ReleaseDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Casts</td>
                                <td style="color: #333;">@Model.Casts</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Country</td>
                                <td style="color: #333;">@Model.Country</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Production</td>
                                <td style="color: #333;">@Model.Production</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-controller="Movie" asp-action="AllMovies" class="btn btn-warning btn-lg">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
            <i class="fas fa-trash-alt"></i> Delete
        </a>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #FFC107;
        border: none;
        font-weight: bold;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        font-weight: bold;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #b22222;
        }
</style>
