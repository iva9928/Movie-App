@model Movie

<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
            <h1 class="display-4">@Model.Title</h1>
            <p class="lead">A @Model.Genre movie </p>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4><strong>Duration:</strong> @Model.Duration minutes</h4>
                    <h4><strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM dd, yyyy")</h4>
                </div>
            </div>
            <table class="table table-striped table-hover border">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th>Property</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>Title</strong></td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>Genre</strong></td>
                        <td>@Model.Genre</td>
                    </tr>
                    <tr>
                        <td><strong>Casts</strong></td>
                        <td>@Model.Casts</td>
                    </tr>
                    <tr>
                        <td><strong>Production</strong></td>
                        <td>@Model.Production</td>
                    </tr>
                    <tr>
                        <td><strong>Country</strong></td>
                        <td>@Model.Country</td>
                    </tr>
                </tbody>
            </table>

            <!-- Admin-only: Edit Movie Button -->
            @if (User.IsInRole("Admin"))
            {
                <div class="text-center mt-4">
                    <a asp-controller="Movie" asp-action="EditMovie" asp-route-id="@Model.Id" class="btn btn-warning">
                        Edit Movie
                    </a>
                </div>
            }
        </div>
    </div>
</div>
