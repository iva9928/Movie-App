@model MovieWebApp.Web.ViewModels.TVShows.TVShowDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <h1 class="text-center mb-4" style="color: darkred; font-weight: bold;">📺 @Model.Title 📺</h1>

    <div class="row">
        <!-- Image Section -->
        <div class="col-md-4 text-center">
            <img src="@Model.TVSeriesImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.Title"
                 style="max-width: 100%; height: auto; border: 5px solid darkred;">
        </div>

        <!-- Details Section -->
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center" style="background: darkred; font-weight: bold; font-size: 1.5rem;">
                    TV Show Details
                </div>
                <div class="card-body p-4">
                    <h3><strong>Genre:</strong> @Model.Genre</h3>
                    <h4><strong>Duration:</strong> @Model.Duration min</h4>
                    <h5><strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM dd, yyyy")</h5>
                    <p><strong>Casts:</strong> @Model.Casts</p>
                    <p><strong>Country:</strong> @Model.Country</p>
                    <p><strong>Production:</strong> @Model.Production</p>
                    <hr>
                    <p style="font-size: 1.2rem;"><strong>Description:</strong> @Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-controller="TVShows" asp-action="AllTVShows" class="btn btn-warning btn-lg">Back</a>
        <a asp-controller="TVShows" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Edit</a>
      @*   <form asp-controller="TVShows" asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                Delete
            </button>
        </form> *@
        <a asp-controller="TVShows" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
            <i class="fas fa-trash-alt"></i> Delete
        </a>
    </div>
</div>
