@model MovieWebApp.Web.ViewModels.Director.DirectorDetailsViewModel

@{
    ViewData["Title"] = "Director Details";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 style="color: #8b0000; font-weight: bold; font-family: 'Georgia', serif;">
            🎬 @Model.FirstName @Model.Surname 🎬
        </h1>
    </div>

    <div class="row">
        <div class="col-lg-4 text-center mb-4">
            <img src="@Model.DirectorImageUrl" alt="@Model.FirstName" class="img-fluid rounded shadow-lg"
                 style="max-width: 100%; height: auto; border: 5px solid #8b0000;">
        </div>

        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center" style="background: #8b0000; font-weight: bold;">
                    Director Details
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">First Name</td>
                                <td>@Model.FirstName</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Surname</td>
                                <td>@Model.Surname</td>
                            </tr>
                            <tr>
                                <td style="font-weight: bold; color: #8b0000;">Biography</td>
                                <td>@Model.Description</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Director" asp-action="AllDirectors" class="btn btn-warning btn-lg">Back</a>
        <a asp-controller="Director" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Edit</a>
        <a asp-controller="Director" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">Delete</a>
    </div>
</div>
