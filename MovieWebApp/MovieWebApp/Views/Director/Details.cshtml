@model Director

<div class="director-page" style="background: linear-gradient(to bottom, #fff7e6, #f9e0b7); min-height: 100vh; padding: 50px;">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 style="color: #8b0000; font-weight: bold; font-family: 'Georgia', serif; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">
                🎥 @Model.FirstName @Model.Surname 🎥
            </h1>
        </div>

        <div class="row">
            <!-- Director Details Table -->
            <div class="col-lg-12">
                <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden;">
                    <div class="card-header text-white" style="background-color: #8b0000; text-align: center; font-weight: bold; font-size: 1.5rem;">
                        Director Details
                    </div>
                    <div class="card-body p-4" style="background-color: #ffffff;">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td style="width: 20%; font-weight: bold; color: #8b0000;">First Name</td>
                                    <td style="width: 80%; color: #333;">@Model.FirstName</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #8b0000;">Surname</td>
                                    <td style="color: #333;">@Model.Surname</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #8b0000;">Famous Movies</td>
                                    <td style="color: #333;">@Model.FamousMovies</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #8b0000;">Description</td>
                                    <td style="text-align: justify; color: #333;">@Model.Description</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .director-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #fff7e6, #f9e0b7); /* Beige gradient */
        padding: 50px;
    }

    h1 {
        font-size: 2.5rem;
        color: #8b0000; /* Consistent deep red */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        background-color: #8b0000; /* Deep red for the header */
        color: white;
        text-align: center;
        font-weight: bold;
    }

    .table td {
        vertical-align: middle;
        padding: 10px 15px;
    }

        .table td:first-child {
            font-weight: bold;
            color: #8b0000; /* Consistent deep red for labels */
        }

        .table td:last-child {
            text-align: justify;
        }
</style>
