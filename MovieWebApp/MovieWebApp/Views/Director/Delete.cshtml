@model MovieWebApp.Web.ViewModels.Director.DeleteDirectorViewModel

<div class="container py-5 text-center">
    <h1 class="text-center mb-4" style="color: darkred; font-weight: bold;">⚠ Confirm Delete ⚠</h1>

    <div class="card shadow-lg p-4" style="border-radius: 15px;">
        <h2 style="color: darkred; font-weight: bold;">@Model.FirstName @Model.Surname</h2>
        <p style="font-size: 1.2rem; color: red;"><strong>Are you sure you want to delete this director?</strong></p>

        <hr />

        <div class="d-flex justify-content-between">
            <a asp-controller="Director" asp-action="AllDirectors" class="btn btn-warning btn-lg">
                <i class="fas fa-times"></i> Cancel
            </a>

            <form asp-controller="Director" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
