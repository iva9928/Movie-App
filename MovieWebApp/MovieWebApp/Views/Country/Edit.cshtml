@model MovieWebApp.Web.ViewModels.Country.EditCountryViewModel

@{
    ViewData["Title"] = "Edit Country";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Country</h2>

    <form asp-action="Edit" method="post" class="border p-4 rounded shadow bg-white">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Country Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="CountryImageUrl" class="form-label">Image URL</label>
            <input asp-for="CountryImageUrl" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-warning btn-lg">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </form>
</div>
