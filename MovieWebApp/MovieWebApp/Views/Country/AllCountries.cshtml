@model MovieWebApp.Web.ViewModels.Country.PaginatedCountriesViewModel

@{
    ViewData["Title"] = "All Countries";
    var searchFilter = ViewBag.SearchFilter as MovieWebApp.Web.ViewModels.Country.SearchFilterCountryViewModel;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-4 text-center flex-grow-1" style="color: darkred; font-weight: bold;">
            🌍 All Countries 🌍
        </h1>
        <a asp-controller="Country" asp-action="AddCountry" class="btn btn-lg" style="background-color: darkred; color: white;">
            + Add Country
        </a>
    </div>

    <!-- Search & Filtering Form -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <form asp-controller="Country" asp-action="AllCountries" method="get" class="d-flex">
                <input type="text" name="searchQuery" value="@searchFilter.SearchQuery" class="form-control me-2" placeholder="Search Countries..." />
                <input type="text" name="nameFilter" value="@searchFilter.NameFilter" class="form-control me-2" placeholder="Filter by Name..." />
                <input type="text" name="descriptionFilter" value="@searchFilter.DescriptionFilter" class="form-control me-2" placeholder="Filter by Description..." />
                <button type="submit" class="btn btn-danger">Search</button>
            </form>
        </div>
    </div>

    <!-- Pagination Controls -->
    <div class="text-center mb-3">
        <span style="font-weight: bold; font-size: 1.2rem;">Show:</span>
        <a asp-controller="Country" asp-action="AllCountries" asp-route-page="1" asp-route-pageSize="2"
           class="btn btn-outline-primary @(Model.PageSize == 2 ? "active" : "")">2</a>
        <a asp-controller="Country" asp-action="AllCountries" asp-route-page="1" asp-route-pageSize="3"
           class="btn btn-outline-primary @(Model.PageSize == 3 ? "active" : "")">3</a>
        <a asp-controller="Country" asp-action="AllCountries" asp-route-page="1" asp-route-pageSize="5"
           class="btn btn-outline-primary @(Model.PageSize == 5 ? "active" : "")">5</a>
    </div>

    <!-- Country Cards -->
    <div class="row g-4">
        @foreach (var country in Model.Countries)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-lg border-0" style="background-color: beige; border-radius: 15px;">
                    <div class="card-img-container" style="position: relative; overflow: hidden; border-radius: 15px 15px 0 0;">
                        <img src="@country.CountryImageUrl" alt="@country.Name" class="card-img-top img-fluid" style="width: 100%; height: auto;">
                    </div>
                    <div class="card-body text-center">
                        <h3 style="color: darkred; font-weight: bold;">@country.Name</h3>
                    </div>
                    <div class="card-footer text-center" style="background-color: beige;">
                        <a asp-controller="Country" asp-action="Details" asp-route-id="@country.Id" class="btn btn-outline-dark">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Navigation -->
    <div class="pagination text-center mt-4">
        @if (Model.TotalPages > 1)
        {
            <a asp-controller="Country" asp-action="AllCountries" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize"
               class="btn btn-secondary @(Model.CurrentPage == 1 ? "disabled" : "")">Previous</a>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-controller="Country" asp-action="AllCountries" asp-route-page="@i" asp-route-pageSize="@Model.PageSize"
                   class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-outline-primary")">@i</a>
            }

            <a asp-controller="Country" asp-action="AllCountries" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize"
               class="btn btn-secondary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Next</a>
        }
    </div>
</div>
