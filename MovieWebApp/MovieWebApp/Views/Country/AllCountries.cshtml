@model IEnumerable<Country>

@{
    ViewData["Title"] = "Countries";
}

<div class="countries-page" style="background: linear-gradient(to bottom, #fff7e6, #f9e0b7); min-height: 100vh; padding: 50px 0;">
    <div class="container py-5">
        <h1 class="text-center mb-5" style="color: #8b0000; font-family: 'Georgia', serif; font-weight: bold;">🌍 Top 5 Countries 🌏</h1>
        <div class="row g-4">
            @foreach (var country in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-lg border-0" style="background-color: #ffffff; border-radius: 20px;">
                        <div class="card-image-container" style="position: relative; height: 200px; overflow: hidden; border-radius: 20px 20px 0 0;">
                            <img src="@country.CountryImageUrl" alt="@country.Name" style="width: 100%; height: 100%; object-fit: cover;">
                            <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.4); display: flex; align-items: center; justify-content: center; opacity: 0; transition: opacity 0.3s;">
                                <h3 style="color: white; font-weight: bold; text-shadow: 2px 2px 5px rgba(0,0,0,0.8);">@country.Name</h3>
                            </div>
                        </div>
                        <div class="card-body text-center">
                            <h4 style="color: #8b0000; font-weight: bold;">@country.Name</h4>
                        </div>
                        <div class="card-footer text-center" style="background-color: #fff7e6;">
                            <a asp-controller="Country" asp-action="Details" asp-route-id="@country.Id"
                               class="btn" style="background-color: #8b0000; color: white; border-radius: 50px; padding: 10px 25px; font-weight: bold; text-transform: uppercase; transition: background-color 0.3s ease;">
                                Explore
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .countries-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #fff7e6, #f9e0b7); /* Beige gradient */
        padding: 50px 0;
    }

    h1 {
        font-size: 2.5rem;
        color: #8b0000; /* Deep red color */
    }

    /* Card Styles */
    .card {
        border-radius: 20px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .overlay {
        transition: opacity 0.3s ease;
    }

    .card-image-container:hover .overlay {
        opacity: 1;
    }

    /* Button Styles */
    .card-footer a {
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .card-footer a:hover {
            background-color: #b22222; /* Slightly darker red for hover effect */
        }
</style>
