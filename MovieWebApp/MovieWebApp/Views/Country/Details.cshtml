@model MovieWebApp.Web.ViewModels.Country.CountryDetailsViewModel

@{
    ViewData["Title"] = "Country Details";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 style="color: darkred; font-weight: bold;">🌍 @Model.Name 🌍</h1>
    </div>

    <div class="row">
        <div class="col-lg-4 text-center mb-4">
            <img src="@Model.CountryImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-lg"
                 style="max-width: 100%; height: auto; border: 5px solid darkred;">
        </div>

        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center" style="background: darkred; font-weight: bold; font-size: 1.5rem;">
                    Country Details
                </div>
                <div class="card-body p-4">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-controller="Country" asp-action="AllCountries" class="btn btn-warning btn-lg">Back</a>
        <a asp-controller="Country" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Edit</a>
        <a asp-controller="Country" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">Delete</a>
    </div>
</div>
