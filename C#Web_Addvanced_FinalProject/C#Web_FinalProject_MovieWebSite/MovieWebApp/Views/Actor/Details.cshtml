@model Actor

<div class="actor-page" style="background: linear-gradient(to bottom, #fff7e6, #f9e0b7); min-height: 100vh; padding: 50px;">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 style="color: #8b0000; font-weight: bold; font-family: 'Georgia', serif; text-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
                🌟 @Model.FirstName @Model.Surname 🌟
            </h1>
        </div>

        <div class="row">
            <!-- Actor Image Section -->
            <div class="col-lg-4 text-center mb-4">
                <div class="image-container" style="position: relative;">
                    <img src="@Model.ActorImageUrl" alt="@Model.FirstName" class="img-fluid rounded shadow-lg"
                         style="max-width: 100%; height: auto; border: 5px solid #8b0000;">
                    <div class="image-overlay"
                         style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); display: none; align-items: center; justify-content: center; border-radius: 10px;">
                        <h4 style="color: white; text-shadow: 1px 1px 3px rgba(0,0,0,0.8); font-weight: bold;">
                            🎬 Spotlight 🎬
                        </h4>
                    </div>
                </div>
            </div>

            <!-- Actor Details Table -->
            <div class="col-lg-8">
                <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden;">
                    <div class="card-header text-white text-center" style="background: #8b0000; font-weight: bold; font-size: 1.5rem;">
                        Actor Details
                    </div>
                    <div class="card-body p-4" style="background-color: #ffffff;">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td style="width: 30%; font-weight: bold; color: #8b0000;">First Name</td>
                                    <td style="width: 70%; color: #333;">@Model.FirstName</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #8b0000;">Surname</td>
                                    <td style="color: #333;">@Model.Surname</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #8b0000;">Description</td>
                                    <td style="text-align: justify; color: #333;">@Model.Description</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .actor-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #fff7e6, #f9e0b7); /* Beige gradient */
        padding: 50px;
    }

    h1 {
        font-size: 2.5rem;
        color: #8b0000; /* Deep red color */
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .table td {
        vertical-align: middle;
        padding: 10px 15px;
    }

    /* Image Container with Hover Effects */
    .image-container {
        position: relative;
    }

        .image-container:hover .image-overlay {
            display: flex;
        }

        .image-container img {
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

            .image-container img:hover {
                transform: scale(1.05);
            }

    /* Card Styling */
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        background: #8b0000; /* Deep red for header */
        color: white;
        text-align: center;
        font-weight: bold;
    }

    .card-body {
        background-color: #ffffff;
    }
</style>
