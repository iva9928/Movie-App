@model Quote

<div class="quote-details-page" style="background: linear-gradient(to bottom, #d3e0ea, #f8f9fa); min-height: 100vh; padding: 50px 0;">
    <div class="container py-5">
        <div class="text-center">
            <h1 style="color: #2a9d8f; font-family: 'Georgia', serif; font-weight: bold; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);">
                🎭 Character Details 🎭
            </h1>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card shadow-lg border-0" style="border-radius: 20px; background-color: #ffffff;">
                    <!-- Display Full Image -->
                    <img src="@Model.CharacterImageUrl" alt="@Model.CharacterName" class="card-img-top rounded-top" style="max-width: 100%; height: auto; display: block; margin: auto;">
                    <div class="card-body text-center">
                        <h3 style="font-size: 1.8rem; color: #1d3557; font-family: 'Courier New', monospace; font-weight: bold;">
                            @Model.CharacterName
                        </h3>
                        <p class="text-muted" style="font-size: 1.2rem; margin-top: 10px;">
                            <strong>From:</strong> @Model.MovieOrShow
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .quote-details-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #d3e0ea, #f8f9fa);
        padding: 50px 0;
    }

    h1 {
        font-size: 2.5rem;
        color: #2a9d8f;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .card {
        border-radius: 20px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    img {
        max-width: 100%;
        height: auto; /* Ensures the aspect ratio is maintained */
        display: block;
        margin: auto;
    }

    h3 {
        font-size: 1.8rem;
        color: #1d3557;
    }
</style>
