@model IEnumerable<Quote>
@{
    ViewData["Title"] = "Quotes";
}

<div class="quotes-page" style="background: linear-gradient(to bottom, #fbe7c6, #fde2e4); min-height: 100vh; padding: 50px 0;">
    <div class="container py-5">
        <h1 class="text-center mb-5" style="color: #e63946; font-family: 'Georgia', serif; font-weight: bold; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);">
            🎭 Famous Quotes 🎭
        </h1>
        <div class="row g-4">
            @foreach (var quote in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-lg border-0" style="background: #ffffff; border-radius: 20px; overflow: hidden; transition: transform 0.3s;">
                        <div class="card-body text-center">
                            <h5 style="font-size: 1.3rem; color: #1d3557; font-family: 'Courier New', monospace; font-weight: bold; margin-bottom: 15px;">
                                "@quote.Description"
                            </h5>
                            <p style="font-size: 1rem; color: #6c757d; font-weight: 500; margin-bottom: 20px;">
                                <strong>Character:</strong> @quote.CharacterName
                            </p>
                        </div>
                        <div class="card-footer text-center" style="background: #ffb4a2; padding: 15px;">
                            <a asp-controller="Quote" asp-action="Details" asp-route-id="@quote.Id"
                               class="btn" style="background-color: #e63946; color: white; border-radius: 50px; padding: 10px 20px; font-weight: bold; text-transform: uppercase; transition: background-color 0.3s;">
                                Character?
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .quotes-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #fbe7c6, #fde2e4);
        padding: 50px 0;
    }

    h1 {
        font-size: 2.5rem;
        color: #e63946;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .btn:hover {
        background-color: #c9184a;
    }
</style>
