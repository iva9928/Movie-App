@model IEnumerable<Director>

@{
    ViewData["Title"] = "Directors";
}

<<div class="directors-page" style="background: linear-gradient(to bottom, #fff7e6, #f9e0b7); min-height: 100vh; padding: 50px 0;">
    <div class="container py-5">
        <h1 class="text-center mb-5" style="color: #8b0000; font-family: 'Georgia', serif; font-weight: bold;">🎬 Top 5 Directors 🎥</h1>
        <div class="row g-4">
            @foreach (var director in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-lg border-0" style="background-color: #fff; border-radius: 15px;">
                        <!-- Full-Format Director Image -->
                        <div class="card-image-container" style="position: relative; overflow: hidden; border-radius: 15px 15px 0 0;">
                            <img src="@director.DirectorImageUrl" alt="@director.FirstName" class="card-img-top img-fluid"
                                 style="width: 100%; height: auto; display: block;">
                        </div>
                        <!-- Director Name Only -->
                        <div class="card-body text-center">
                            <h5 style="color: #8b0000; font-family: 'Courier New', Courier, monospace; font-weight: bold;">
                                @director.FirstName @director.Surname
                            </h5>
                        </div>
                        <!-- Details Button -->
                        <div class="card-footer text-center" style="background-color: #fff7e6;">
                            <a asp-controller="Director" asp-action="Details" asp-route-id="@director.Id"
                               class="btn"
                               style="background-color: #8b0000; color: white; border-radius: 50px; padding: 10px 20px; font-weight: bold; text-transform: uppercase; transition: background-color 0.3s ease;">
                                Learn More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .directors-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #fff7e6, #f9e0b7); /* Beige-like gradient */
        padding: 50px 0;
    }

    /* Title Styling */
    h1 {
        font-size: 2.5rem;
        color: #8b0000;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    /* Card Styling */
    .card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

    /* Full-Format Image Styling */
    .card-image-container img {
        width: 100%;
        height: auto; /* Maintains the aspect ratio */
        display: block;
    }

    /* Button Styling */
    .card-footer a {
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .card-footer a:hover {
            background-color: #b22222;
            transform: scale(1.05);
        }
</style>
