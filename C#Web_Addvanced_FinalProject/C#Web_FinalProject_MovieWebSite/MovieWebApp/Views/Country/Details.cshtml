@model Country

<div class="country-details-page" style="background: linear-gradient(to bottom, #fff7e6, #f9e0b7); min-height: 100vh; padding: 50px 0;">
    <div class="container py-5">
        <div class="text-center">
            <h1 style="color: #8b0000; font-family: 'Georgia', serif; font-weight: bold;">🌍 @Model.Name 🌍</h1>
            <div class="mb-4 mt-3">
                <img src="@Model.CountryImageUrl" alt="@Model.Name" class="img-fluid shadow-lg rounded" style="max-width: 300px; border: 5px solid #8b0000;" />
            </div>
        </div>
        <div class="text-center mt-4">
            <p style="font-size: 1.25rem; line-height: 1.8; color: #333; max-width: 800px; margin: auto;">
                @Model.Description
            </p>
        </div>
    </div>
</div>

<style>
    .country-details-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #fff7e6, #f9e0b7); /* Beige gradient */
        padding: 50px 0;
    }

    h1 {
        font-size: 2.5rem;
        color: #8b0000; /* Deep red */
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    img {
        border-radius: 15px;
        border: 5px solid #8b0000; /* Deep red border */
        transition: transform 0.3s ease;
    }

        img:hover {
            transform: scale(1.05); /* Slight zoom on hover */
        }

    p {
        font-family: 'Georgia', serif;
        color: #333;
        text-align: justify;
        margin: auto;
        max-width: 800px; /* Center the text */
    }
</style>
