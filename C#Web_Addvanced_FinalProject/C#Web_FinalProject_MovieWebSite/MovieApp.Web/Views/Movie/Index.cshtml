@using MovieApp.Data.Models
@model IEnumerable<Movie>

<h2>All Movies</h2>
       @*  public string Description { get; set; } = null!; *@

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Casts</th>
            <th>Duration</th>
            <th>Country</th>
            <th>Production</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseDate.ToString("MMMM yyyy")</td>
                <td>@movie.Casts</td>
                <td>@movie.Duration minutes</td>
                <td>@movie.Country</td>
                <td>@movie.Production</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="See Movie" class="btn btn-primary">Movie details</a>
